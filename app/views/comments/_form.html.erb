<%= form_with(model: [post, Comment.new], remote: true, class: "comment-form") do |form| %>
  <div class="form-group">
    <%= form.label :body, class: "control-label" %>
    <%= form.text_field :body, class: "form-control", placeholder: "Enter your comment here" %>
  </div>

  <div class="form-group">
    <%= form.submit "Submit Comment", class: "btn btn-primary" %>
  </div>
<% end %>


