<table class="min-w-full border border-gray-300">
  <thead>
    <tr class="bg-gray-100">
      <th class="py-2 px-4 border-b">Name</th>
      <th colspan="2" class="py-2 px-4 border-b">Likes</th>
      <th class="py-2 px-4 border-b">Location</th>
      <th class="py-2 px-4 border-b">Start date</th>
      <th colspan="3" class="py-2 px-4 border-b">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr class="hover:bg-gray-50">
        <td class="py-2 px-4 border-b"><%= event.name %></td>
        <td class="py-2 px-4 border-b">Count: <%= event.likes_count %></td>
        <td class="py-2 px-4 border-b">
          <%= button_to "Like", event_path(event), method: :patch, params: { like: true }, class: "btn-like" %>
        </td>
        <td class="py-2 px-4 border-b"><%= event.location %></td>
        <td class="py-2 px-4 border-b"><%= event.start_date.strftime("%d/%m/%Y") %></td>
        <td class="py-2 px-4 border-b"><%= link_to 'Show', event, class: "btn-show" %></td>
        <td class="py-2 px-4 border-b"><%= link_to 'Edit', edit_event_path(event), class: "btn-edit" %></td>
        <td class="py-2 px-4 border-b"><%= button_to 'Destroy', event, method: :delete, data: { turbo_confirm: 'Are you sure?' }, class: "btn-destroy" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<style>
/* Add your desired styles here */
.table {
  border-collapse: collapse;
  width: 100%;
}

th, td {
  text-align: left;
  padding: 8px;
  border-bottom: 1px solid #ddd;
}

th {
  background-color: #f5f5f5;
}

.btn-like,
.btn-show,
.btn-edit,
.btn-destroy {
  display: inline-block;
  padding: 6px 12px;
  margin: 2px;
  border-radius: 4px;
  text-decoration: none;
  cursor: pointer;
}

.btn-like {
  background-color: #4caf50;
  color: #fff;
}

.btn-show {
  background-color: #3498db;
  color: #fff;
}

.btn-edit {
  background-color: #f39c12;
  color: #fff;
}

.btn-destroy {
  background-color: #e74c3c;
  color: #fff;
}

.hover\:bg-gray-50:hover {
  background-color: #f9f9f9;
}

</style>
