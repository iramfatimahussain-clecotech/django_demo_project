<div>
	<%= movie.count%>
	<% @movies.each do |movie| %>
		<div data-controller="dropdown">
				<button role="button" data-action="click->dropdown#openDropdown" data-dropdown-target="openButton">
					show movie
				</button>

				<button data-action="click->dropdown#closeDropdown" data-dropdown-target="closeButton"
				  class="bg-zinc-400">
						close 
				</button>
				<div class="movie" data-dropdown-target="dropdownContent">
						<%#= render movie %>
						<%= movie.title %>
						<p>
						<%= link_to "Show this movie", movie %>
						</p>
				</div>
			<% end %>
		</div>
</div>